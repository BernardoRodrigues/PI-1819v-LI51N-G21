<table id="albums-table" class="table table-hover mx-auto my-auto">
    <thead>
        <tr>
            <th scope="col"></th>
            <th scope="col">Name</th>
        </tr>
    </thead>
    <tbody id="albums-table-body">
        {{#each this as |album|}}

        {{!-- add onclick to see songs --}}
        <tr>
            <td hidden>{{album.mbid}}</td>
            {{!-- <td><img src=`${{{album.images[0].url}}}`></td> --}}
            <td>{{album.name}}</td>
        </tr>
        {{/each}}
    </tbody>

</table>