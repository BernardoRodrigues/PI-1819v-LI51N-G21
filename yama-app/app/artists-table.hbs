<table class="table table-hover">
    <thead>
        <tr>
           <th scope="col"></th> 
           <th scope="col">Name</th>
        </tr>
    </thead>
    <tbody>
        {{#each artists as |artist|}}
        {{!-- add onclick event for each row to go to artist albums --}}
            <tr>
                <td><img src=artist.images[0].url></td>
                <td>{{artist.name}}</td>
            </tr>
        {{/each}}}}
    </tbody>
</table>